@using Library.Core.Models
@model IEnumerable<Library.Core.Models.Books>

@{
    ViewBag.Title = "AddBook";
}

@section Scripts{
    
}

@section Body{
    <div class="section panel panel-primary">
        <div class="panel-heading"></div>
        <div class="panel-body">
            <p>
                @Html.ActionLink("На главную", "AdminPanel", null, new { @class = "btn btn-xs btn-primary" })
                @Html.ActionLink("Выйти", "Index", null, new { @class = "btn btn-xs btn-primary" })
            </p>
            <table class="table table-striped table-condensed">
                <thead><tr><th>Название</th><th>Автор</th><th></th></tr></thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Author</td>
                            <td>
                                @Html.ActionLink("Взять", "AddBook" , new Books { Id = item.Id, Name = item.Name, Author = item.Author, GiveBackDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, DateTime.Now.Day).AddMonths(1)}, new {@class="btn btn-xs btn-primary"})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
